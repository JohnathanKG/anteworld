{
    // VS Code tasks for building and installing the vehicle plugin
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "bazel",
            "args": [
                "build",
                "//vehicle_plugin:vehicle_plugin",
                "--copt=/DEBUG:FULL",
                "--copt=/Z7",
                "--copt=/Od",
                "--copt=/MP",
                "--features=generate_pdb_file",
                "--output_groups=pdb_file,default",
                "-c",
                "dbg",
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}/example/",
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Copies the built DLL and PDB into Program Files. Run VS Code as Administrator.
            "type": "shell",
            "label": "install: vehicle_plugin",
            "dependsOn": "build",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/example/scripts/install_vehicle_plugin.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}/example/"
            },
            "problemMatcher": []
        }
    ],
}